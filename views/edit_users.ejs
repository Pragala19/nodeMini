<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto mt-5" style="width: 50%; height: 70px;">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User (<%= user.name%>) </h3>
                </div>
                <div class="card-body p-20"> 
                <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name">Name:</label>
                        <input type="text" name="name" class="form-controll form-controll-lg" placeholder="Enter Name" value="<%= user.name%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email:</label>
                        <input type="email" name="email" class="form-controll form-controll-lg" placeholder="Enter Email" value="<%= user.email%>" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone">Phone:</label>
                        <input type="phone" name="phone" class="form-controll form-controll-lg" placeholder="Enter Phone" value="<%= user.phone %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Select Image:</label>
                        <input type="file" name="image" class="form-controll form-controll-lg" >
                        <img src="<%= user.image %>" alt="" width="100" class="img-thumbnail mt-1">
                    </div>
                    <img src="/<%= user.image %>"  class="img-thumbnail" style=" width: 30%; height: 30%;">
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
                    </div> 
                </form>
                </div>
            </div>
             
        </div>
    </div>
</div>
<%- include('layout/footer') %>