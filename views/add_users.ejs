<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-12 mx-auto mt-4" style="width: 50%; height: 70px;">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add new User </h3>
                </div>
                <div class="card-body p-4"> 
                <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="name">Name:</label>
                        <input type="text" name="name" class="form-controll form-controll-lg" placeholder="Enter Name" required>
                    </div>
                    <div class="mb-3">
                        <label for="email">Email:</label>
                        <input type="email" name="email" class="form-controll form-controll-lg" placeholder="Enter Email" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone">Phone:</label>
                        <input type="phone" name="phone" class="form-controll form-controll-lg" placeholder="Enter Phone" required>
                    </div>
                    <div class="mb-3">
                        <label for="image" class="form-label">Select Image:</label>
                        <input type="file" name="image" class="form-controll form-controll-lg">
                    </div>
                    <div class="mb-3 d-grid">
                        <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg">
                    </div> 
                </form>
                </div>
            </div>
             
        </div>
    </div>
</div>
<%- include('layout/footer') %>